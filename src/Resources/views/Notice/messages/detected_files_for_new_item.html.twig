{% set storage %}
	<a href="{{ path('home_search', {'anime_db_catalog_search_items[storage]': storage.id}) }}">{{ storage.name }}</a>
{% endset %}
{% set name %}
	{% if link is not null %}
		<a href="{{ link }}">{{ name }}</a>
	{% else %}
		"{{ name }}"
	{% endif %}
{% endset %}
{% trans with {'%name%': name, '%storage%': storage } %}Detected files for new item %name% on storage %storage%{% endtrans %}
