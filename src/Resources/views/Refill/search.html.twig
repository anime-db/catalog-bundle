<div class="b-filler-search b-refill-search">
	{% if result is not empty %}
		<div>{% trans %}Found several entries are similar to yours, select the correct one.{% endtrans %}</div>
		<em>{% trans %}Reference to identify the record can be added plugin to the sources in this case the search for this recording will not be performed again.{% endtrans %}</em>
		<ul>
			{% for item in result %}
				<li>
					<a href="{{ item.link }}" class="image" title="{% trans %}Use to fill{% endtrans %}">
						<img src="{{ item.image|dummy('card') }}" alt="{{ item.name }}" />
					</a>
					<div class="info">
						<a href="{{ item.link }}" class="header" title="{% trans %}Use to fill{% endtrans %}">{{ item.name }}</a>
						<div>{{ item.description|nl2br }}</div>
						<a href="{{ item.source }}" target="_blank" class="external">{% trans %}Read more{% endtrans %}</a>
					</div>
					<br clear="both">
				</li>
			{% endfor %}
		</ul>
	{% else %}
		<div>{% trans %}Nothing found{% endtrans %}</div>
	{% endif %}
</div>
