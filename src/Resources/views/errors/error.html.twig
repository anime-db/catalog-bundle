{% extends 'AnimeDbAppBundle::layout.html.twig' %}

{% block title %}An Error Occurred: {{ status_text }}{% endblock %}

{% block body %}
<div id="wrapper">
	<div id="header">
		<h1 class="logo">
			<a href="{{ path('home') }}" title="Home Anime DB">
				<span>Home Anime DB</span>
			</a>
		</h1>
	</div>
	<div id="content-wrapper">
		<div class="content">
			<h1>Oops! An Error Occurred</h1>
			<h2>The server returned a "{{ status_code }} {{ status_text }}".</h2>
			<div>Something is broken. Please e-mail us at <a href="mailto:{{ admin_email }}">{{ admin_email }}</a> and let us know what you were doing when this error occurred. We will fix it as soon as possible. Sorry for any inconvenience caused.</div>
		</div>
	</div>
	<div id="footer">
		<div class="license">The program is licensed under the <a href="http://opensource.org/licenses/GPL-3.0">GPLv3</a>.</div>
		<div class="copy">&copy; 2011-{{ "now"|date("Y") }} <a href="http://anime-db.org/">Anime DB</a></div>
	</div>
	<div id="line"></div>
	<div id="bg"></div>
</div>
{% endblock %}
