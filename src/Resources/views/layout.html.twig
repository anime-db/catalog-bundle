{% extends 'AnimeDbAppBundle::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% include 'AnimeDbCatalogBundle::ga.html.twig' %}
{% endblock %}

{% block body %}
<div id="wrapper">
    <div id="navigation" class="b-dropdown-menu">
        <nav>
            <div class="left"></div>
            {{ knp_menu_render('main', {
                template: 'AnimeDbCatalogBundle:Menu:base_menu.html.twig'
            }) }}
            <div class="right"></div>
        </nav>
    </div>
    <div id="header">
        <h1 class="logo">
            <a href="{{ path('home') }}" title="{% trans %}Home Anime DB{% endtrans %}">
                <span>{% trans %}Home Anime DB{% endtrans %}</span>
            </a>
        </h1>
    </div>
    <div id="content-wrapper">
        {% block notice %}<div id="notice-container" data-from="{{ path('notice_show', {'all': path('notice_list')}) }}"></div>{% endblock %}
        <div class="content">
            {% block content %}{% endblock %}
        </div>
    </div>
    <div id="footer">
        <div class="license">{% trans with {'%license%': '<a href="http://opensource.org/licenses/GPL-3.0">GPLv3</a>'}%}The program is licensed under the %license%.{% endtrans %}</div>
        <div class="copy">&copy; 2011-{{ "now"|date("Y") }} <a href="http://anime-db.org/">Anime DB</a></div>
    </div>
    <div id="line"></div>
</div>

<script type="text/javascript">
var translations = {
    'Are you sure want to delete this item(s)?': '{% trans %}Are you sure want to delete this item(s)?{% endtrans %}',
    'Failed to get the data. Want to try again?': '{% trans %}Failed to get the data. Want to try again?{% endtrans %}'
};
</script>
<div id="cap">
    <div id="cap-content"></div>
    <div id="popup-container">
        <div id="cap-breaker"></div>
        <div id="popup-wrapper">
            {% set popup_id = 'b-lazyload-popup' %}
            {% include 'AnimeDbAppBundle::popup.html.twig' %}
        </div>
    </div>
</div>
{% endblock %}
