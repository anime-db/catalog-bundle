{% if items is defined and items %}
<div class="list-items">
	{% for item in items %}
		<div class="item">
			<img src="{{ item.cover|dummy('catalog') }}" alt="{{ item.name }}" />
			<a href="{{ item.link }}" class="name"><strong>{{ item.name }}</strong></a>
			{% if item.type is not empty %}
				<div class="type">
					<a href="{{ item.type.link }}" title="{% trans %}Type{% endtrans %}">{{ item.type.name }}</a>
				</div>
			{% endif %}
			{% if item.item is not empty %}
				<a href="{{ path('item_show', {'id': item.item.id, 'name': item.item.urlName}) }}" title="{% trans %}Show item{% endtrans %}" class="add already">â†‘</a>
			{% elseif item.linkForFill is not empty %}
				<a href="{{ item.linkForFill }}" title="{% trans %}Add item{% endtrans %}" class="add">+</a>
			{% endif %}
			{% if item.genres is not empty %}
				<ul class="genres">
					{% for genre in item.genres %}
						<li class="genre-item">
							<a href="{{ genre.link }}" title="{% trans %}Genre{% endtrans %}">{{ genre.name }}</a>
						</li>
					{% endfor %}
				</ul>
			{% endif %}
		</div>
	{% endfor %}
</div>
{% endif %}