<span class="f-refill b-dropdown-menu">
	<span title="{% trans %}Fill this field from the source{% endtrans %}" class="icon icon-fill">{% trans %}Refill{% endtrans %}</span>
	<ul>
		{% for plugin in plugins %}
			<li><a
				{% if plugin.can_refill %}
					href="{{ path('refiller_refill', {plugin: plugin.name, field: field, id: item.id}) }}"
				{% else %}
					href="{{ path('refiller_search', {plugin: plugin.name, field: field, id: item.id}) }}"
				{% endif %}
				class="icon-label icon-label-plugin-{{ plugin.name }}"
				data-plugin="{{ plugin.name }}"
				data-can-refill="{{ plugin.can_refill }}"
				data-link-refill="{{ path('refiller_refill', {plugin: plugin.name, field: field, id: item.id}) }}"
			><strong>{{ plugin.title }}</strong></a></li>
		{% endfor %}
	</ul>
</span>